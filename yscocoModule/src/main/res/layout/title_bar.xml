<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_titile"
    android:layout_width="match_parent"
    android:layout_height="@dimen/DIMEN_85PX"
    android:background="@color/title_bg_color"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title_left"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/DIMEN_55PX"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/DIMEN_20PX"
        android:gravity="center_vertical"
        android:minWidth="@dimen/DIMEN_100PX">

        <ImageView
            android:id="@+id/iv_title_left"
            android:layout_width="@dimen/DIMEN_44PX"
            android:layout_height="@dimen/DIMEN_44PX"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/ico_title_back" />

        <TextView
            android:id="@+id/back_button"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_85PX"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size28" />
    </LinearLayout>
    <!--居中文字-->
    <TextView
        android:id="@+id/title_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="@color/title_text_color"
        android:textSize="@dimen/text_size32" />

    <ImageView
        android:id="@+id/title_img"
        android:layout_width="@dimen/DIMEN_30PX"
        android:layout_height="@dimen/DIMEN_30PX"
        android:layout_centerInParent="true"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rl_title_right"
        android:layout_width="@dimen/DIMEN_150PX"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:visibility="gone">

        <TextView
            android:id="@+id/right_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_50PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_22PX"
            android:gravity="center"
            android:textColor="@color/title_text_color"
            android:textSize="@dimen/text_size28"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/right_image"
            android:layout_width="@dimen/DIMEN_44PX"
            android:layout_height="@dimen/DIMEN_44PX"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/DIMEN_22PX"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
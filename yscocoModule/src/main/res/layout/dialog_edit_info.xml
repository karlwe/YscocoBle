<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/lLayout_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@drawable/config_content_bg">
    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/config_content_text_color"
        android:gravity="center"
        android:padding="@dimen/DIMEN_40PX"
        android:text="主题"/>

    <EditText
        android:id="@+id/et_content"
        style="@style/et_genal_style"
        android:gravity="center_vertical|left"
        android:layout_height="@dimen/DIMEN_75PX"
        android:background="@drawable/ll_bg_border"
        android:layout_marginLeft="@dimen/DIMEN_50PX"
        android:layout_marginRight="@dimen/DIMEN_50PX"
        android:hint="请输入内容"/>
    <TextView
        android:id="@+id/tv_error_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_10PX"
        android:layout_marginLeft="@dimen/DIMEN_50PX"
        android:layout_marginRight="@dimen/DIMEN_50PX"
        android:layout_marginBottom="@dimen/DIMEN_40PX"
        android:textSize="@dimen/text_size24"/>
    <View
        style="@style/ll_cut_style"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <Button
            android:id="@+id/btn_left"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_marginLeft="@dimen/DIMEN_10PX"
            android:layout_weight="1"
            android:background="@drawable/alertdialog_left_selector"
            android:gravity="center"
            android:textColor="@color/config_left_text_color"
            android:textSize="@dimen/text_size28"
            android:text="@string/cancel_text"/>

        <ImageView
            android:id="@+id/img_line"
            android:layout_width="@dimen/DIMEN_1PX"
            android:layout_height="@dimen/DIMEN_100PX"
            android:background="@color/alertdialog_line"/>

        <Button
            android:id="@+id/btn_right"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/DIMEN_100PX"
            android:layout_weight="1"
            android:layout_marginRight="@dimen/DIMEN_10PX"
            android:background="@drawable/alertdialog_right_selector"
            android:gravity="center"
            android:textColor="@color/config_right_text_color"
            android:textSize="@dimen/text_size28"
            android:text="@string/config_text"/>
    </LinearLayout>
</LinearLayout>